@model Mascota

@{
    Layout = "_TemplateUser";
    ViewData["Title"] = "Editar Información Mascota";
    BlobModel imgPet = ViewData["IMAGEN_MASCOTA"] as BlobModel;
}

<div class="container">
    <div class="card border">
        <!-- Card header -->
        <div class="card-header border-bottom">
            <h4 class="card-header-title">Editar Información Mascota</h4>
        </div>

        <!-- Card body START -->
        <div class="card-body">
            <!-- Form START -->
            <form class="row g-3" method="post" enctype="multipart/form-data">
                <!-- Profile photo -->
                <div class="col-12">
                    <label class="form-label">Upload your profile photo<span class="text-danger">*</span></label>
                    <div class="d-flex align-items-center">
                        <label class="position-relative me-4" for="uploadfile-1" title="Replace this pic">
                            <!-- Avatar place holder -->
                            <span class="avatar avatar-xl rounded-circle border border-white border-3 shadow">
                                @if (imgPet != null)
                                {
                                    <img id="uploadfile-1-preview" class="avatar-img " src="@imgPet.Url" alt="">
                                }
                                else
                                {
                                    <img id="uploadfile-1-preview" class="avatar-img " src="https://vetpetstorage.blob.core.windows.net/vetcareimages/default_pet.webp" alt="">
                                }
                            </span>
                        </label>
                        <!-- Upload button -->
                        <label class="btn btn-sm btn-secondary-soft mb-0" for="uploadfile-1">Change</label>
                        <input id="uploadfile-1" name="fichero" class="form-control d-none" type="file">
                    </div>
                </div>

                <!-- Id's' -->
                <input name="idusuario" type="hidden" class="form-control" value="@Model.IdUsuario">
                <input name="idmascota" type="hidden" class="form-control" value="@Model.IdMascota">

                <!-- Name -->
                <div class="col-md-6">
                    <label class="form-label">Nombre<span class="text-danger">*</span></label>
                    <input name="nombre" type="text" class="form-control" value="@Model.Nombre" placeholder="Introduce el nombre">
                </div>

                <!-- Race -->
                <div class="col-md-6">
                    <label class="form-label">Raza<span class="text-danger">*</span></label>
                    <input name="raza" type="text" class="form-control" value="@Model.Raza" placeholder="Introduce la Raza">
                </div>

                <!-- Type -->
                <div class="col-md-12">
                    <label class="form-label">Tipo<span class="text-danger">*</span></label>
                    <select name="tipo" class="form-control">
                        <option value="Perro">Perro</option>
                        <option value="Gato">Gato</option>
                        <option value="Otros">Otros</option>
                    </select>
                </div>

                <!-- Date -->
                <div class="col-md-6">
                    <label class="form-label">Fecha Nacimiento<span class="text-danger">*</span></label>
                    <input name="fechanacimiento" type="datetime" class="form-control" value="@Model.Fecha_Nacimiento" placeholder="Introduce la Fecha de Nacimiento">
                </div>

                <!-- Weight -->
                <div class="col-md-6">
                    <label class="form-label">Peso<span class="text-danger">*</span></label>
                    <input name="peso" type="number" class="form-control" value="@Model.Peso" placeholder="Introduce el Peso">
                </div>



                <!-- Button -->
                <div class="col-12 text-end">
                    <button class="btn btn-warning mb-0">Guardar Cambios</button>
                </div>
            </form>
            <!-- Form END -->
        </div>
        <!-- Card body END -->
    </div>

</div>


@section Scripts
    {
    <script src="~/lib/sweetalert/sweetalert2.all.min.js"></script>
    @if (@ViewData["MENSAJE"] != null)
    {
        <script>
            Swal.fire({
                position: 'top-end',
                icon: 'success',
                title: '@ViewData["MENSAJE"].ToString()',
                showConfirmButton: false,
                timer: 2500
            })
        </script>
    }
}